<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small">


    <ImageView
        android:id="@+id/ivSimilarMovie"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@drawable/dot_disable" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_huge"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_toRightOf="@id/ivSimilarMovie"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSimilarMovieTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Judul film" />

        <TextView
            android:id="@+id/tvSimilarMovieReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:fontFamily="@font/lato"
            tools:text="2018-20-13" />

    </LinearLayout>


</RelativeLayout>